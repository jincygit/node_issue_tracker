<main id="main">

    <!-- ======= Hero Slider Section ======= -->
    <section id="hero-slider" class="hero-slider">
      <div class="container-md" data-aos="fade-in">
        <div class="row">
          <div class="col-12">
            <div class="swiper sliderFeaturedPosts">
              <div class="swiper-wrapper">
                <div class="swiper-slide">
                  <a href="" class="img-bg d-flex align-items-end" style="background-image: url('/images/post-slide-1.jpg');">
                    <div class="img-bg-inner">
                      <h2 >Create projects</h2>
                    </div>
                  </a>
                </div>

                
              </div>
              <div class="custom-swiper-button-next">
                <span class="bi-chevron-right"></span>
              </div>
              <div class="custom-swiper-button-prev">
                <span class="bi-chevron-left"></span>
              </div>

              <div class="swiper-pagination"></div>
            </div>
          </div>
        </div>
      </div>
    </section><!-- End Hero Slider Section -->

    <!-- ======= Project Create Start ======= -->
    <section>
        <div class="container contact-form">
            <form method="POST" action="/project/create" id="new-project-form">
                <h3>Create Project</h3>
               <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" placeholder="Your Name *" value="" required/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="author" class="form-control" placeholder="Your Author *" value="" required/>
                        </div>

                        <div class="form-group" style="margin: 0px 0px 14px 0px;">
                            <input type="submit" name="btnSubmit" class="btnContact" value="Create Project" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea name="description" class="form-control" placeholder="Your Description *" style="width: 100%; height: 75px;" required></textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- Project Create End  -->

    <!-- ======= Project List Start ======= -->
    <section id="posts" class="posts">
        <h2 style="margin-left: 70px; text-align: center;">Projects List </h2>
      <div class="container" data-aos="fade-up">
        <div class="row g-5">
   
          <div class="col-lg-12">
            <div class="row" id="projects-list-container">
                <% if(projects){ %>
                    <% for(project of projects){ %>
                    <div class="col-lg-4 border-start custom-border" id="post-<%= project._id %>">
                        <div class="post-entry-1">
                            <a href="details/<%= project._id %>"><img src="/images/post-landscape-5.jpg" alt="" class="img-fluid" style="height: 83px;width: 100%;"></a>
                            <div class="post-meta"><span><%= project.author %></span></div>
                            <h2><a href="details/<%= project._id %>"><%= project.name %></a></h2>
                            <div class="form-group" style="margin: 0px 0px 14px 0px;">
                                <a href="details/<%= project._id %>">
                                    <input type="submit" name="btnSubmit" class="btnContact" value="View Details" />
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>
                <% } else { %>
                    <div class="col-lg-4 border-start custom-border">
                        <div class="post-entry-1">
                            <h2>No Projects Available</h2>
                        </div>
                    </div>
                <% } %>
                
            </div>
          </div>

        </div> <!-- End .row -->
      </div>
    </section> 
    <!-- Project List End  -->

    


  </main><!-- End #main -->